/// @description  menu_fn_reset_inputs()
function menu_fn_reset_inputs() {
	// make sure that presses aren't registered after running this script until
	// a new press is explicitly made
	up_press = false;
	up = false;
	up_prev = true;

	down_press = false;
	down = false;
	down_prev = true;

	left_press = false;
	left = false;
	left_prev = true;

	right_press = false;
	right = false;
	right_prev = true;

	ok_press = false;
	ok = false;
	ok_prev = true;

	cancel_press = false;
	cancel = false;
	cancel_prev = true;




}
